<style>
    .brand {
        height: var(--bar-h);
        display: flex;
        align-items: center;
        padding: 0 1.25rem;
        font-weight: 600;
        letter-spacing: .3px;
        border-bottom: 1px solid rgba(255,255,255,.08);
        color: #fff;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        box-sizing: border-box;
    }

    .nav {
        display: flex;
        flex-direction: column;
        gap: .6rem;
        padding: 1rem
    }

    .link {
        display: flex;
        align-items: center;
        gap: .75rem;
        padding: .75rem .9rem;
        border-radius: 14px;
        text-decoration: none;
        color: #eaeaea;
        background: #121212;
        border: 1px solid rgba(255,255,255,.06);
        transition: background .2s ease,color .2s ease,transform .2s ease,border .2s ease;
        min-width: 0;
    }

    .text {
        min-width: 0;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .link svg {
        width: 18px;
        height: 18px;
        stroke: currentColor;
        fill: none;
        stroke-width: 1.7;
        stroke-linecap: round;
        stroke-linejoin: round;
        flex: 0 0 auto;
    }

    .link:hover {
        background: #1a1a1a;
        color: #fff;
        transform: translateY(-1px)
    }

    .link.active {
        background: #1f1f1f;
        color: #fff;
        border-color: rgba(255,255,255,.15)
    }

    @@media (max-width: 60em) {
        .brand {
            padding: 0 1rem;
            font-size: 1.1rem;
        }

        .nav {
            padding: .75rem;
        }
    }
</style>